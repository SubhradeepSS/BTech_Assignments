<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Switch ON/OFF Bluetooth">

        <CheckBoxPreference
            android:title="Bluetooth"
            android:key="bluetooth"
            android:defaultValue="false"
            android:summaryOn="Bluetooth ON"
            android:summaryOff="Bluetooth OFF"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="Screen Brightness">
        <SeekBarPreference
            android:id="@+id/brightness"
            android:key="brightness"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Screen Orientation">
        <ListPreference
            android:title="Orientation"
            android:key="ORIENTATION"
            android:entries="@array/item_name"
            android:entryValues="@array/item_values"
            android:defaultValue="false"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="System Volume">
        <SeekBarPreference
            android:id="@+id/volume"
            android:key="volume"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:max="15" />
    </PreferenceCategory>

</PreferenceScreen>

